  const images = uploadedImageUrls.map(url => ({
    url: url,
    alt: `${url.split('/').pop()}`
  }));

  const formData = prepareFormData(images);
  
  // Get the submit button correctly
  const submitButton = event.target.closest('.button-group').querySelector('.submit');
